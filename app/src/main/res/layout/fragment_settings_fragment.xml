<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".settings_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ok_product_settings_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/nutrients_goal"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="SETTINGS"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/register_shape_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView35" />

            <CheckBox
                android:id="@+id/supper_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:text="@string/supper_6"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/tea_check_box"
                app:layout_constraintTop_toBottomOf="@+id/notification_tea_switch" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/green_bt_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <CheckBox
                android:id="@+id/training_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:text="@string/training_8"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/snacks_check_box"
                app:layout_constraintTop_toBottomOf="@+id/snacks_check_box" />

            <EditText
                android:id="@+id/pro_user_product_settings_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:inputType="number"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="@+id/textView9" />

            <CheckBox
                android:id="@+id/dinner_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:text="@string/dinner_3"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/second_breakfast_check_box"
                app:layout_constraintTop_toBottomOf="@+id/second_breakfast_notification_switch" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Select meals"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <EditText
                android:id="@+id/carbo_user_product_settings_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/textView11"
                app:layout_constraintStart_toStartOf="@+id/pro_user_product_settings_dialog"
                app:layout_constraintTop_toTopOf="@+id/textView11" />

            <CheckBox
                android:id="@+id/tea_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:text="@string/tea_5"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/dessert_check_box"
                app:layout_constraintTop_toBottomOf="@+id/dessert_notification_switch" />

            <CheckBox
                android:id="@+id/snacks_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:text="@string/snacks_7"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/supper_check_box"
                app:layout_constraintTop_toBottomOf="@+id/notification_supper_switch" />

            <CheckBox
                android:id="@+id/second_breakfast_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:text="@string/nummeret_breakfast_2"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/breakfast_check_box"
                app:layout_constraintTop_toBottomOf="@+id/notification_breakfast_switch" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Fat"
                android:textColor="@android:color/primary_text_light"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <CheckBox
                android:id="@+id/breakfast_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:text="@string/nummeret_breakfast_1"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView39"
                app:layout_constraintTop_toBottomOf="@+id/textView39" />

            <Switch
                android:id="@+id/notification_breakfast_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/breakfast_check_box"
                app:layout_constraintEnd_toStartOf="@+id/breakfast_notification_time"
                app:layout_constraintTop_toTopOf="@+id/breakfast_check_box" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Carbo"
                android:textColor="@android:color/primary_text_light"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Protein"
                android:textColor="@android:color/primary_text_light"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <EditText
                android:id="@+id/fat_user_product_settings_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="@+id/pro_user_product_settings_dialog"
                app:layout_constraintTop_toTopOf="@+id/textView10" />

            <CheckBox
                android:id="@+id/all_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="All"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/training_check_box"
                app:layout_constraintTop_toBottomOf="@+id/notification_training_switch" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Kcal"
                android:textColor="@android:color/primary_text_light"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView31" />

            <CheckBox
                android:id="@+id/dessert_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:text="@string/dessert_4"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/dinner_check_box"
                app:layout_constraintTop_toBottomOf="@+id/dinner_notification_switch" />

            <EditText
                android:id="@+id/kcal_product_settings_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/pro_user_product_settings_dialog"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/breakfast_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="10:30"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/notification_breakfast_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/notification_breakfast_switch" />

            <Switch
                android:id="@+id/second_breakfast_notification_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/second_breakfast_check_box"
                app:layout_constraintEnd_toStartOf="@+id/second_breakfast_notification_time"
                app:layout_constraintTop_toTopOf="@+id/second_breakfast_check_box" />

            <Switch
                android:id="@+id/dinner_notification_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/dinner_check_box"
                app:layout_constraintEnd_toStartOf="@+id/dinner_notification_time"
                app:layout_constraintTop_toTopOf="@+id/dinner_check_box" />

            <Switch
                android:id="@+id/dessert_notification_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/dessert_check_box"
                app:layout_constraintEnd_toStartOf="@+id/dessert_notification_time"
                app:layout_constraintTop_toTopOf="@+id/dessert_check_box" />

            <Switch
                android:id="@+id/notification_tea_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tea_check_box"
                app:layout_constraintEnd_toStartOf="@+id/tea_notification_time"
                app:layout_constraintTop_toTopOf="@+id/tea_check_box" />

            <TextView
                android:id="@+id/tea_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="10:30"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/notification_tea_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/notification_tea_switch" />

            <Switch
                android:id="@+id/notification_supper_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/supper_check_box"
                app:layout_constraintEnd_toStartOf="@+id/supper_notification_time"
                app:layout_constraintTop_toTopOf="@+id/supper_check_box" />

            <TextView
                android:id="@+id/supper_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="10:30"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/notification_supper_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/notification_supper_switch" />

            <Switch
                android:id="@+id/notification_snacks_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/snacks_check_box"
                app:layout_constraintEnd_toStartOf="@+id/snacks_notification_time"
                app:layout_constraintTop_toTopOf="@+id/snacks_check_box" />

            <TextView
                android:id="@+id/snacks_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="10:30"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/notification_snacks_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/notification_snacks_switch" />

            <Switch
                android:id="@+id/notification_training_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/training_check_box"
                app:layout_constraintEnd_toStartOf="@+id/training_notification_time"
                app:layout_constraintTop_toTopOf="@+id/training_check_box" />

            <TextView
                android:id="@+id/training_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="10:30"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/notification_training_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/notification_training_switch" />

            <TextView
                android:id="@+id/second_breakfast_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="10:30"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/second_breakfast_notification_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/second_breakfast_notification_switch" />

            <TextView
                android:id="@+id/dinner_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="10:30"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/dinner_notification_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dinner_notification_switch" />

            <TextView
                android:id="@+id/dessert_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="10:30"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/dessert_notification_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dessert_notification_switch" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/notification"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/ok_product_settings_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/green_bt_shape"
        android:text="SAVE DATA"
        android:textColor="@color/design_default_color_background"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>